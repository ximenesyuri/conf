#! /bin/bash

# VIM FUNCTION
function vim() {
    declare -A FILETYPE_FUNCTIONS=(
        ["py"]="vim_py"
    )
    declare -A FILETYPE_START_CMDS=(
        ["md"]="syntax spell toplevel"
        ["txt"]="syntax spell toplevel | set filetype=text" 
        ["null"]=""
    )
    DEFAULT_START_CMDS=(startinsert)

    function vim_cwd() {
        if [[ -f "/tmp/vim_cwd" ]]; then
            cd "$(cat /tmp/vim_cwd)"
            rm "/tmp/vim_cwd"
            cd - > /dev/null 2>&1
        fi
    }

    function vim_cmd() {
        local cwd="$PWD"
        if [[ ! "$1" == "-c" ]]; then
            cd "$(dirname "$1")"
            local file_extension
            if [[ $1 == *.* ]]; then
                file_extension=${1##*.}
            else
                file_extension="null"
            fi
        fi
        local vim_start_cmd=""
        if [[ -n "${FILETYPE_START_CMDS[$file_extension]}" ]]; then
            vim_start_cmd="${FILETYPE_START_CMDS[$file_extension]}"
        else
            vim_start_cmd="$(IFS='|'; echo "${DEFAULT_START_CMDS[*]}")"
        fi
        command vim -c "$vim_start_cmd" "$@"
        cd "$cwd"
    }

    function vim_dir() {
        vim_cmd "$@"
    }

    function vim_py() {
        function venv() {
            local dir="$PWD"
            while [[ "$dir" != "/" ]]; do
                if [[ -d "$dir/.venv" ]]; then
                    echo "$dir"
                    return 0
                fi
                dir=$(dirname "$dir")
            done
            return 1
        }
        local venv_dir
        venv_dir=$(venv)
        if [[ -n "$venv_dir" ]]; then
            source "$venv_dir/.venv/bin/activate"
            vim_cmd "$@"
            deactivate
            return
        fi
        vim_cmd "$@"
    }

    if [[ -d "$1" ]]; then
        vim_dir "$@"
    else
        local file_extension="${1##*.}"
        if [[ -n "${FILETYPE_FUNCTIONS[$file_extension]}" ]]; then
            "${FILETYPE_FUNCTIONS[$file_extension]}" "$@"
        else
            vim_cmd "$@"
        fi
    fi
} 

# BC FUNCTION
function bc(){
    echo "Welcome to bc calculator. Type \"quit\" to exit."
    command bc -q -i -l $@
}
# RANDOM FUNCTION
function random(){
    var=$(tr -dc A-Za-z0-9 </dev/urandom | head -c $1; echo)
    echo $var
    echo $var | xclip -selection clipboard
}  
 
# LOCALHOST FUNCTION
function localhost(){
    firefox localhost:$1/$2 & disown
}
alias lh="localhost"

# MON FUNCTION
function mon(){
    if [[ -z "$1" ]]; then
        mon left
    elif [[ "$1" == "right" ]] ||
         [[ "$1" == "r" ]]; then
        xrandr --output eDP-1 --auto --output HDMI-1 --auto --right-of eDP-1
    elif [[ "$1" == "left" ]] ||
         [[ "$1" == "l" ]]; then
        xrandr --output eDP-1 --auto --output HDMI-1 --auto --left-of eDP-1
    fi
}

# BIB FUNCTION
function bib() {
    if [ -n $BIB ]; then
        echo "BIB env not defined."
        return 1
    fi
    local line filepath basename
    line=$(find "$BIB" -maxdepth 1 -type f -name '*.pdf' \
        | awk -F/ '{print $0 "\t" gensub(/\.pdf$/, "", 1, $NF)}' \
        | sort --reverse -t$'\t' -k2 \
        | fzf --with-nth=2 --delimiter='\t' \
            --preview 'pdftotext {1} - | head -40' --preview-window=right:70%)
    [ -z "$line" ] && return
    filepath="${line%%$'\t'*}"
    basename="${line#*$'\t'}"
    [ -n "$filepath" ] && zathura "$filepath"
}
